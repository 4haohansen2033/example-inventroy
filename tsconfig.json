  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2015.promise"],
    "moduleResolution": "node"
  },
  "include": ["client/src/**/*"],
  "exclude": ["node_modules"]
}
